---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "welcome";

const identity = {
    firstName: "kat",
    lastName: "poko",
    location: "Eastern Washington",
    occupation: "visual designer and front-end developer",
    hobbies: ["photography", "snowboarding", "art", "dogs"],    
}; 

const skills =["HTML", "CSS", "JavaScript", "Figma", "Adobe Creative Suite"]

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "#ff9776";
const fontWeight = "bold";
const textCase = "TitleCase";

---




    <BaseLayout pageTitle={pageTitle}>
      <style define:vars={{skillColor, fontWeight, textCase}}>
      
      h2 { 
        font-size: 0.8rem;
      
      }
        .skill {
          color: var(--skillColor);
          font-weight: var(--fontWeight);
          text-transform: var(--textCase);
        }

      </style>
    <h2>to the portfolio mothership. ðŸš€</h2>
    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>I live in {identity.location} and I work as a {identity.occupation}.</li>
      {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
          }
        </ul>
        <p>My skills are:</p>
        <ul>
          {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        {happy && <p>I am happy to be learning Astro!</p>}
        
        {finished && <p>I finished this tutorial!</p>}
        
        {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
        
</BaseLayout>

  